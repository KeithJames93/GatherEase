
{
  "entities": {
    "Party": {
      "title": "Party",
      "description": "An event created by a host",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "date": { "type": "string" },
        "time": { "type": "string" },
        "location": { "type": "string" },
        "description": { "type": "string" },
        "createdAt": { "type": "object", "description": "Firestore serverTimestamp" }
      },
      "required": ["name", "date", "location"]
    },
    "RSVP": {
      "title": "RSVP",
      "description": "A guest response to a party",
      "type": "object",
      "properties": {
        "partyId": { "type": "string" },
        "name": { "type": "string" },
        "createdAt": { "type": "object" }
      },
      "required": ["partyId", "name"]
    },
    "Message": {
      "title": "Message",
      "description": "A chat message in a party",
      "type": "object",
      "properties": {
        "partyId": { "type": "string" },
        "text": { "type": "string" },
        "sender": { "type": "string" },
        "createdAt": { "type": "object" }
      },
      "required": ["partyId", "text", "sender"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/parties/{partyId}": {
      "schema": "Party",
      "description": "Collection of party events"
    },
    "/rsvps/{rsvpId}": {
      "schema": "RSVP",
      "description": "Collection of RSVPs"
    },
    "/messages/{messageId}": {
      "schema": "Message",
      "description": "Collection of chat messages"
    }
  }
}
